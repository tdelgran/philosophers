NAME = philo

CC = gcc

CFLAGS = -Wall -Wextra -Werror -pthread -g  #-fsanitize=thread

RM = rm -f

SRC =   src/main.c \
        src/parsing.c \
		src/actions.c \
		src/threads.c \
		src/utils.c \
		src/init.c

			

OBJ = $(SRC:.c=.o)

%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

all: $(NAME)

clean:
	$(RM) $(OBJ)

fclean: clean
	$(RM) $(NAME)

re: fclean all

.PHONY: clean fclean all re
